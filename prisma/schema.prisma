datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  image     String?
  aiDataConsent Boolean @default(false)
  
  emailVerifiedAt     DateTime?
  passwordResetToken  String?   @unique
  passwordResetExpires DateTime?
  
  // Stripe
  stripeCustomerId      String?
  stripeSubscriptionId  String?
  planType              String  @default("free")
  subscriptionStatus    String?
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastLoginAt  DateTime?
  
  securityLogs   SecurityLog[]
  trackerEntries TrackerEntry[]
  posts          Post[]
  comments       Comment[]
  insightSignals InsightSignal[]
  profile        Profile?
  personalPlan   PersonalPlan?
}

model Profile {
  id                       String    @id @default(cuid())
  userId                   String    @unique
  isCurrentlyBreastfeeding Boolean   @default(false)
  feedingFrequency         Int?
  lastFeedTime             DateTime?
  goalTimeline             String?
  primaryGoal              String?
  journeyStage             String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model TrackerEntry {
  id               String    @id @default(cuid())
  userId           String
  date             DateTime  @default(now())
  
  feedsCount       Int       @default(0)
  pumpSessions     Int       @default(0)
  lastFeedTime     DateTime?
  
  // --- Legacy Fields (Keep for backward compatibility or migration) ---
  discomfortLevel  Int?
  fullnessLevel    Int?
  sensitivityLevel Int?
  temperatureLevel Int?
  
  stressLevel      Int?
  moodLevel        Int?
  anxietyLevel     Int?
  
  sleepHours       Float?
  sleepQuality     Int?
  
  babyFussiness    Int?
  solidFoodIntake  Int?
  babyDependency   String?

  // --- NEW: Maternal Cessation Engine (The Pivot) ---
  // Physiology
  bodyTemperature   Float?     // Decimal (e.g., 99.1)
  physicalSymptoms  String[]   // Array: "Redness", "Hot to Touch", "Wedge-Shaped Hardness"
  painLevel         Int?       // 1-10 Scale
  breastHeatmap     Json?      // Quadrant Data: { left: ["upper-outer"], right: [] }

  // Descent / Logistics
  nursingSessions   Int?       // Total removal sessions
  maxMilkGap        Float?     // Hours between removals
  milkVolume        String?    // FULL, HALF, MINIMAL

  // Hormonal / Mood
  moodSignals       String[]   // Array: "Crying Bouts", "Brain Fog", "Night Sweats"
  irritabilityScore Int?       // 1-5 Scale

  // Interventions
  interventions     String[]   // Array: "Cabbage", "Ice", "Sage Tea"
  
  notes            String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, date])
}

model InsightSignal {
  id                  String   @id @default(cuid())
  userId              String
  signalType          String
  severity            String   @default("info")
  message             String?
  stabilityScore      Int?
  congestionIndicator String?
  emotionalLoadIndex  Int?
  rawMood             Int?
  rawPain             Int?
  rawPainLevel        Int?
  rawSymptoms         String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, signalType])
}

model Post {
  id        String   @id @default(cuid())
  userId    String
  title     String
  content   String
  published Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments Comment[]
  
  @@index([userId])
}

model Comment {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  content   String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([postId])
  @@index([userId])
}

model SecurityLog {
  id        String   @id @default(cuid())
  event     String
  severity  String   @default("info")
  userId    String?
  email     String?
  ip        String?
  userAgent String?
  details   String?
  resolved  Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model SystemFlag {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

model PersonalPlan {
  id        String   @id @default(cuid())
  userId    String   @unique
  status    String   @default("pending")
  planType  String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
